@model FredsBoats.Web.Models.Boat

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Boat Specification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Category</dt>
        <dd class = "col-sm-10">@Model.Category?.Name</dd>
        <dt class = "col-sm-2">Colour</dt>
        <dd class = "col-sm-10">@Model.BoatColour?.Name</dd>
        <dt class = "col-sm-2">Hourly Rate</dt>
        <dd class = "col-sm-10">$@Model.HourRate</dd>
        <dt class = "col-sm-2">Daily Rate</dt>
        <dd class = "col-sm-10">$@Model.DailyRate</dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<h3>User Comments</h3>
<p><em>No comments yet.</em></p>

<hr />
<h3>User Comments</h3>
@if (Model.Comments != null && Model.Comments.Any())
{
 <ul class="list-group mb-4">
 @foreach (var comment in Model.Comments)
 {
 <li class="list-group-item">
 <strong>@comment.Author</strong>
 <span class="text-muted" style="fontsize:small;">(@comment.CreatedAt.ToShortDateString())</span>
 <br />
 @comment.Content
 </li>
 }
 </ul>
}
else
{
 <p class="text-muted">No comments yet. Be the first to add one!</p>
}
<div class="card p-3 bg-light">
 <h5>Add a Comment</h5>
 <form asp-action="AddComment" method="post">
 <input type="hidden" name="BoatId" value="@Model.BoatId" />
 <div class="mb-3">
 <label class="form-label">Your Name:</label>
 <input type="text" name="Author" class="form-control" required
/>
 </div>
 <div class="mb-3">
 <label class="form-label">Comment:</label>
 <textarea name="Content" class="form-control" rows="3"
required></textarea>
 </div>
 <button type="submit" class="btn btn-primary">Post
Comment</button>
 </form>
</div>